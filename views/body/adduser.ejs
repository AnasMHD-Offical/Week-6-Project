<%- include('../layout/header.ejs') %>

  <body class="d-flex justify-content-center align-items-center py-4 bg-body-secondary ">
      <div class="cards-lg-8  ">
        <% if(message&&resolve == true){ %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 18 18">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
              <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
            </svg>
  
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% }else{%>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>
        <div class="container m-md-3 p-1">
          <div class="container-sm align-middle mt-5">
    
            <main class="form-signin w-100 m-auto">
              <form action="" method="POST">
                  <h1 class="h3 mb-3 text-center fw-bold">Add New User</h1>
                  
            <div class="form-floating mb-2">
                <input type="text" name="name" class="form-control" id="floatingInput" placeholder="Anas Muhammed">
                <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating mb-2">
                <input type="text" name="phone" class="form-control" id="floatingInput" placeholder="+91 9037313241" maxlength="10">
                <label for="floatingInput">Phone</label>
            </div>
            <div class="form-floating mb-2">
                <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>
            <div class="form-floating mb-2">
              <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
              <label for="floatingPassword">Password</label>
            </div>
            
            <!-- <div class="form-check text-start my-3">
              <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                Remember me
              </label>
            </div> -->
            <div class="d-flex">
                <button class="btn btn-primary w-100 py-2" type="submit">Add User</button>
            <a href="/admin/adminpanel" class="btn btn-danger ms-2">Admin pannel</a>
            </div>
        </form>
          
        </main>
            </div>
        </div>
      </div>

<%- include('../layout/footer.ejs') %>
